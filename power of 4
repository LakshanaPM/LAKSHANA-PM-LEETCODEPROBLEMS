class Solution {
public:
    bool isPowerOfFour(int n) {
        if(n%4==0||n==1){
            for(int i=0;i<30;i++){
                if(n==pow(4,i)){
                    return true;
                }
            }
        }
        else{
            return false;
        }
        
    
    return 0;}
};
